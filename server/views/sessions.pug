html 
    head 
        title Tasks DB | Sessions
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        include jquery
    include header 
    body 
        div(class = "container")
            br
            h1(class="display-6") All Sessions
            br
            form(class="d-flex")
                input(class="form-control me-2" type="search" placeholder="Search for Sesssion Name" aria-label="Search" name="name")
                button(class="btn btn-outline-success" type="submit") Search
            div(class="list-group")
                for s in sessions
                    a(href="/sessions/"+s.sid class="list-group-item list-group-item-action") #{s.sid}. #{s.session_name}
            div(class = "container")
                p !{'  '}
                p !{'  '}

                    
