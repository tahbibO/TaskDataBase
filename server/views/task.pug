html 
    head 
        title Tasks DB | #{data.task.task_name}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        include jquery
    include header 
    body
        div(class ="container")
            br
            h1(class="display-6") #{data.task.task_name}
            br
            p #[strong id:] #{data.task.tid}
            p #[strong Notes:] #{data.task.task_notes}
            p #[strong Date Completed:] #{data.task.task_completed}
            p
                strong Owner:
                | 
                a(href = "/persons/"+ data.owner.pid) #{data.owner.first_name}  #{data.owner.last_name}
            br
            h2 Participants
            div(class="list-group")
                for p in data.participants
                    a(href="/persons/"+p.pid class="list-group-item list-group-item-action") #{p.pid}. #{p.first_name} #{p.last_name}
        