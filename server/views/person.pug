html 
    head 
        title Tasks DB | #{data.person.first_name} #{data.person.last_name}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        include jquery
    include header 
    body
        div(class ="container")
            br
            h1(class = "display-6") #{data.person.first_name} #{data.person.last_name}
            br
            h2 Created Tasks
            div(class="list-group")
                for e in data.createdTasks
                    a(href="/tasks/"+e.tid class="list-group-item list-group-item-action") #{e.tid}. #{e.task_name}
            br
            h2 Created Sessions
            div(class="list-group")
                for e in data.createdSessions
                    a(href="/sessions/"+e.sid class="list-group-item list-group-item-action") #{e.sid}. #{e.session_name}
            br
            h2 Participating In Tasks
            div(class="list-group")
                for e in data.participatedTasks
                    a(href="/tasks/"+e.tid class="list-group-item list-group-item-action") #{e.tid}. #{e.task_name}
            br
            h2 Participating In Sessions:
            div(class="list-group")
                for e in data.participatedSessions
                    a(href="/sessions/"+e.sid class="list-group-item list-group-item-action") #{e.sid}. #{e.session_name}